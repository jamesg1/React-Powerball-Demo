{
  "compilerOptions": {
    "baseUrl": "src",
    "outDir": "./dist/",
    "sourceMap": true,
    "target": "es5",
    "downlevelIteration": true,
    "module": "commonjs",
    "jsx": "react",
    "strict": true,
    "noImplicitAny": false,
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "lib": [
      "es5",
      "es6",
      "dom"
    ],
    "types": [
      "jest",
      "node"
    ]
  },
  "include": [
    "./src/**/*"
  ]
}
